<html lang="en">

{{> head}}

<body class="sb-nav-fixed">
  {{> staffHeader}}
  <div class="container py-5" style="margin-top: 1%; margin-left: 10%">
    <center>
      <div class="form-group">
   
        <div class="input-group">
          <a href="/staff/staffAddCourse" >
            <span>Create new Course</span>
          </a>
       
      </div>
    </center>
    <div class="e-panel card" style="width: 90%; margin-left: 5%">
      <div class="card-body">
        <div class="card-title">
        </div>
        <div class="e-table">
          <div class="table-responsive table-lg mt-3">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th>Name Course</th>
                  <th>category</th>
                  <th>description</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                {{#each course}}
                <tr>
                  <td class="text-nowrap align-middle">{{name}}</td>
                  <td class="text-nowrap align-middle">{{category}}</td>
                  <td class="text-nowrap align-middle">{{description}}</td>
                  <td class="text-center align-middle">
                    <div class="btn-group align-top">
                      <a href="/staff/staffUpdateCourse?id={{_id}}" >
                        <span>Update</span>
                      </a>
                      <a href="/staff/staffDeleteCourse?id={{_id}}">
                        <span>Delete</span>
                      </a>
                    </div>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

</html>